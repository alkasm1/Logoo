  <script src="../assets/js/designer.js"></script>
  <script>
    window.onload = function () {
      const canvas = document.getElementById("logoCanvas");
      const ctx = canvas.getContext("2d");
      const image = new Image();
      image.src = localStorage.getItem("generatedLogo");
      image.onload = function () {
        ctx.drawImage(image, 0, 0, canvas.width, canvas.height);
      };
    };

    function toggleExtraTools() {
      alert("إظهار الأدوات الإضافية (قيد التطوير)");
    }

    function changeColor() {
      alert("اختر اللون (لاحقًا)");
    }

    function changeFont() {
      alert("تغيير الخط (لاحقًا)");
    }

    function changeSize() {
      alert("تكبير/تصغير (لاحقًا)");
    }

    function toggleShadow() {
      alert("تفعيل الظل (لاحقًا)");
    }

    function apply3D() {
      alert("تأثير ثلاثي الأبعاد (لاحقًا)");
    }

    function waveText() {
      alert("تأثير التمايل (لاحقًا)");
    }
  </script>
